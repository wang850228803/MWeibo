<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="@dimen/main_maren_left"
    android:paddingRight="@dimen/main_maren_right">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/title_height"
            android:layout_height="@dimen/title_height"
            android:id="@+id/imageView" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id = "@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="15dp"
                android:layout_marginStart="@dimen/margen_commen"/>

            <TextView
                android:id = "@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8dp"
                android:layout_marginStart="@dimen/margen_commen"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id = "@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:lineSpacingExtra="3dp"
        android:paddingTop="@dimen/margen_commen"/>

    <com.wanghui.image.NoScrollGradView
        android:id = "@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margen_commen"
        android:columnWidth="100dp"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:horizontalSpacing="@dimen/margen_commen"
        android:verticalSpacing="@dimen/margen_commen">

    </com.wanghui.image.NoScrollGradView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_height"
        android:paddingTop="@dimen/margen_commen"
        android:orientation="horizontal">
        <TextView
            android:id = "@+id/repost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id = "@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margen_left"/>
    </LinearLayout>

</LinearLayout>